---
interface Props {
	title: string;
	description: string;
	href: string;
	tech: string[];
}

const { title, description, href, tech } = Astro.props;
---

<div class="bg-slate-800/50 border border-slate-700 p-6 rounded-2xl hover:border-blue-500 transition-all group">
	<h3 class="text-2xl font-semibold mb-2 group-hover:text-blue-400">{title}</h3>
	<p class="text-slate-400 mb-4">{description}</p>
	<div class="flex flex-wrap gap-2 mb-6">
		{tech.map((t) => (
			<span class="bg-blue-900/30 text-blue-300 text-xs px-2 py-1 rounded-full border border-blue-800">{t}</span>
		))}
	</div>
	<a href={href} target="_blank" class="text-blue-400 font-medium hover:underline inline-flex items-center">
		Ver código en GitHub →
	</a>
</div>